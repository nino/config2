#!/usr/bin/env raku

my $branch = '';
my $paste = run('pbpaste', :out).out.slurp.chomp;
say $paste;
if @*ARGS.elems == 0 {
  $branch = $paste;
} elsif @*ARGS[0] eq '-a' {
  $branch = $paste ~ '-' ~ @*ARGS[1];
} else {
  $branch = @*ARGS[0];
}

$branch = $branch.trim.subst(/<-alnum>/, '-', :g);

system "git checkout -b $branch";
