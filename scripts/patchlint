#!/usr/bin/env bun

import { readFile, copyFile } from "fs/promises";
import { resolve, dirname } from "path";
import { fileURLToPath } from "url";
import { execFile } from "child_process";
import { promisify } from "util";

const execFileAsync = promisify(execFile);

interface EslintMapping {
  pattern: string;
  source: string;
  target: string;
}

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

function expandTilde(path: string): string {
  if (path.startsWith("~/")) {
    return resolve(process.env.HOME ?? "", path.slice(2));
  }
  return path;
}

function matchPattern(cwd: string, pattern: string): boolean {
  const regex = new RegExp(pattern.replace(/\*/g, ".*"));
  return regex.test(cwd);
}

async function getGitRepoRoot(): Promise<string | null> {
  try {
    const { stdout } = await execFileAsync("git", [
      "rev-parse",
      "--git-common-dir",
    ]);
    const gitDir = stdout.trim();
    return dirname(resolve(gitDir));
  } catch {
    return null;
  }
}

async function main(): Promise<void> {
  const repoRoot = await getGitRepoRoot();
  if (repoRoot == null) {
    console.error("Not in a git repository");
    process.exit(1);
  }

  const mappingsPath = resolve(__dirname, "eslint-mappings.json");
  const mappings: EslintMapping[] = JSON.parse(
    await readFile(mappingsPath, "utf-8"),
  );

  const cwd = process.cwd();
  for (const mapping of mappings) {
    if (matchPattern(repoRoot, mapping.pattern)) {
      const source = expandTilde(mapping.source);
      const target = resolve(cwd, mapping.target);

      try {
        await copyFile(source, target);
        console.log(`Patched ${mapping.target}`);
        process.exit(0);
      } catch (error) {
        console.error(`Failed to copy ${source} to ${target}:`, error);
        process.exit(1);
      }
    }
  }

  console.error(
    "Not in a recognized plinth directory (app, functions, or database-scripts)",
  );
  process.exit(1);
}

main();
